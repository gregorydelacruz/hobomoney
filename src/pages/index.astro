---
import '@/styles/globals.css'
import Layout from '../layouts/Layout.astro';
import { SiteHeader } from '@/components/ui/site-header';
import { FeaturedPosts } from '@/components/featured-posts';
import { MarketOverview } from '@/components/market-overview';
import { NewsletterSignup } from '@/components/newsletter-signup';
---

<Layout title="WealthWise - Financial Advice & Market Insights">
  <SiteHeader client:load />
  <main class="container py-8 space-y-12">
    <section class="space-y-4">
      <h1 class="text-4xl font-bold tracking-tight">Market Snapshot</h1>
      <p class="text-muted-foreground">Stay updated with the latest market movements</p>
      <MarketOverview client:load />
    </section>

    <section class="space-y-4">
      <h2 class="text-3xl font-bold tracking-tight">Featured Insights</h2>
      <p class="text-muted-foreground">Discover our latest financial advice and market analysis</p>
      <FeaturedPosts client:load />
    </section>

    <section class="max-w-2xl mx-auto">
      <NewsletterSignup client:load />
    </section>
  </main>
</Layout>
